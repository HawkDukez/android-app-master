<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.idlestar.ratingstar.RatingStarView
            android:id="@+id/recommend_rating"
            android:layout_width="130dp"
            android:layout_height="18dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="18dp"
            android:background="#ffffff"
            android:paddingLeft="0dp"
            android:paddingTop="2dp"
            android:paddingRight="0dp"
            app:cornerRadius="4dp"
            app:drawStrokeForEmptyStar="true"
            app:drawStrokeForHalfStar="false"
            app:enableSelectRating="true"
            app:onlyHalfStar="false"
            app:rating="4"
            app:starBackgroundColor="#ffffff"
            app:starForegroundColor="#ffcf3d"
            app:starMargin="6dp"
            app:starNum="5"
            app:starThickness="0.7"
            app:strokeColor="#ffcf3d"
            app:strokeWidth="3px" />

        <TextView
            android:id="@+id/recommend_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recommend_rating"
            android:layout_alignStart="@+id/recommend_rating"
            android:text="一条评论的具体内容都显示在这里了吧"
            android:layout_marginTop="10dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/recommend_label1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/myshape3"
            android:layout_below="@+id/recommend_comment"
            android:layout_alignStart="@+id/recommend_comment"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:paddingRight="10dp"
            android:paddingBottom="3dp"
            android:text="#标签"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/recommend_label2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/myshape3"
            android:layout_toRightOf="@+id/recommend_label1"
            android:layout_below="@+id/recommend_comment"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:paddingRight="10dp"
            android:paddingBottom="3dp"
            android:text="#标签"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/recommend_label3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/myshape3"
            android:layout_toRightOf="@id/recommend_label2"
            android:layout_below="@+id/recommend_comment"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:paddingRight="10dp"
            android:paddingBottom="3dp"
            android:text="#标签"
            android:textSize="16dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/recommend_label2"

            />


</RelativeLayout>