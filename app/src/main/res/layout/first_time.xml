<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        android:id="@+id/cardView">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cover"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="美食推荐识别"
            android:gravity="center_vertical"
            android:textColor="#ffffff"
            android:layout_gravity="bottom"
            android:textSize="18sp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/choose"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/cardView"
        android:layout_alignLeft="@+id/cardView"
        android:layout_below="@+id/cardView"
        android:layout_marginTop="19dp"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:textColor="#000000"
        android:text="选择你喜欢的标签" />

    <CheckBox
        android:id="@+id/c1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/choose"
        android:layout_alignLeft="@+id/choose"
        android:layout_below="@+id/choose"
        android:layout_marginTop="16dp"
        android:background="@drawable/myshape3"
        android:button="@null"
        android:paddingLeft="15dp"
        android:paddingTop="8dp"
        android:paddingRight="15dp"
        android:paddingBottom="8dp"
        android:text="邹盛熠牛逼"
        android:textSize="15sp"
        android:elevation="5dp"/>

    <CheckBox
        android:id="@+id/c2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/myshape3"
        android:layout_alignTop="@+id/c1"
        android:layout_toRightOf="@+id/c1"
        android:layout_marginLeft="20dp"
        android:button="@null"
        android:paddingLeft="15dp"
        android:paddingTop="8dp"
        android:paddingRight="15dp"
        android:paddingBottom="8dp"
        android:text="林会东牛逼"
        android:textSize="15sp"
        android:elevation="5dp"
        />

    <CheckBox
        android:id="@+id/c3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/c1"
        android:layout_below="@+id/c1"
        android:layout_marginTop="16dp"
        android:background="@drawable/myshape3"
        android:button="@null"
        android:paddingLeft="15dp"
        android:paddingTop="8dp"
        android:paddingRight="15dp"
        android:paddingBottom="8dp"
        android:text="郑怡静牛逼"
        android:textSize="15sp"
        android:elevation="5dp"
        />

    <CheckBox
        android:id="@+id/c4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/myshape3"
        android:button="@null"
        android:paddingLeft="15dp"
        android:paddingTop="8dp"
        android:paddingRight="15dp"
        android:paddingBottom="8dp"
        android:text="郑怡静牛逼"
        android:textSize="15sp"
        android:elevation="5dp"
        android:layout_alignTop="@+id/c3"
        android:layout_toRightOf="@+id/c3"
        android:layout_marginLeft="20dp"
        />



    <Button
        android:id="@+id/nextB"
        android:layout_width="78dp"
        android:layout_height="38dp"
        android:text="下一步"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="113dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        />


</RelativeLayout>
